<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="10dp"
    app:cardMaxElevation="12dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/clai_doc_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/doc_name"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/clai_share_button"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="#0000FF"
                android:clickable="true"
                android:contentDescription="@string/profile_pic"
                android:focusable="true"
                android:src="@android:drawable/ic_menu_share" />
            <ImageButton
                android:id="@+id/clai_share_button_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="#FFA200"
                android:clickable="true"
                android:contentDescription="@string/profile_pic"
                android:focusable="true"
                android:src="@drawable/ic_baseline_mobile_screen_share_24" />

            <ImageButton
                android:id="@+id/clai_view_doc_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="#00FF00"
                android:clickable="true"
                android:contentDescription="@string/profile_pic"
                android:focusable="true"
                android:src="@android:drawable/ic_menu_search" />

            <ImageButton
                android:id="@+id/clai_delete_card_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="#FF0000"
                android:clickable="true"
                android:contentDescription="@string/profile_pic"
                android:focusable="true"
                android:src="@android:drawable/ic_menu_delete" />

        </LinearLayout>

        <EditText
            android:id="@+id/clai_edtxt_doc_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="Name"
            android:backgroundTint="@color/colorPrimaryDark"
            android:hint="@string/enter_doc_id"
            android:inputType="text"
            android:minHeight="48dp" />

        <TextView
            android:id="@+id/clai_doc_encoded_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/doc_img"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:visibility="gone" />

    </LinearLayout>

</androidx.cardview.widget.CardView>